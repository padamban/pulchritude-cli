{
  "name": "@pulchritude-cli/repo",
  "license": "MIT",
  "version": "0.0.0",
  "workspaces": [
    "packages/*",
    "configs/*",
    "cli/*",
    "demo/*",
    "docs"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "cli:s": "tsx ./cli/cli/src/run/run-now.ts",
    "cli:d": "node ./cli/cli/dist/run/run-now.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "build:tsc": "turbo run build:tsc",
    "release": "changeset publish",
    "changeset": "changeset",
    "pre-publish": "node ./.github/scripts/pre-publish.js",
    "pre-build": "node ./.github/scripts/pre-build.js",
    "publish-packages": "changeset version && changeset publish",
    "test:w": "vitest --watch --config ./configs/vitest/all.config.ts",
    "test:ui": "vitest --ui --config ./configs/vitest/all.config.ts",
    "test:unit:ui": "vitest --ui --config ./configs/vitest/unit.config.ts",
    "test:e2e": "vitest run --config ./configs/vitest/e2e.config.ts",
    "test:unit": "vitest run --config ./configs/vitest/unit.config.ts",
    "test:unit:c": "vitest run --coverage --config ./configs/vitest/unit.config.ts",
    "dep-graph": "depcruise cli/cli/src --config",
    "dep-graph:svg": "depcruise cli/cli/src --config --output-type dot | dot -T svg > dependency-graph.svg",
    "dep-graph:md": "depcruise cli/cli/src --config --output-type markdown > dependency-graph.md",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@pulchritude-cli/config.tsconfig": "workspace:*",
    "@pulchritude-cli/config.eslint": "workspace:*",
    "@changesets/cli": "2.26.0",
    "@types/node": "18.15.0",
    "tsup": "6.6.3",
    "tsx": "3.12.3",
    "typescript": "4.9.5",
    "@vitest/ui": "0.30.1",
    "vite": "4.2.1",
    "vitest": "0.30.1",
    "@vitest/coverage-c8": "0.30.1",
    "turbo": "1.8.3",
    "dependency-cruiser": "12.11.3",
    "husky": "8.0.3"
  }
}
